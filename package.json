{
    "name": "pearl-map",
    "description": "A high-performance 3D web mapping platform",
    "main": "index.js",
    "scripts": {
        "dev": "shadow-cljs watch app",
        "build": "npm run prebuild && shadow-cljs release app && clojure -M -m pearl-map.build --cleanup",
        "clean": "rm -rf target/public",
        "predev": "npm run prebuild",
        "prebuild": "npm run build:model && npm run build:assets",
        "build:assets": "clojure -M -m pearl-map.build",
        "build:model": "gltf-pipeline -i resources/public/models/eiffel_tower/scene.gltf -o resources/public/models/eiffel_tower/scene.glb -b"
    },
    "keywords": ["map", "3d", "geospatial", "visualization"],
    "author": "OverbearingPearl",
    "dependencies": {
        "@maplibre/maplibre-gl-style-spec": "^20.0.0",
        "color": "^4.2.3",
        "maplibre-gl": "^5.9.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "three": "^0.169.0"
    },
    "devDependencies": {
        "gltf-pipeline": "^4.1.0",
        "shadow-cljs": "^2.28.1"
    }
}
